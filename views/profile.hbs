<link rel='stylesheet' href='/stylesheets/profile.css' /> <!--84-->
<const id = {{id}}/>

<h1>{{title}}</h1>
<p>Welcome {{name}} to your {{title}}</p>
<p>You id is {{id}}</p>
{{routines}}
<div id = "profileMenu">
    <section id= "menu" class="vertical-menu">
        <a href="javascript:void(0);" onclick="profileFetchSection(`{{id}}`) ">Profile</a>
        <a href="javascript:void(0);" onclick="progressFetchSection(`{{id}}`)">Progress</a>
        <a href="javascript:void(0);" onclick="userRequest('routines')">Routines</a>
        <a href="javascript:void(0);" onclick="userRequest('exercise')">Exercise</a>
        <a href="javascript:void(0);" onclick="goalFetchSection(`{{id}}`)">Goal</a>
        <a href="javascript:void(0);" onclick="userLogOut()">Log Out</a>
    </section>

    <section class = "results">
        
    </section>

    <!-- The Modal -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <form action="" class ="modalUserInfo">
                <label for="">Name:</label>
                <input type="text" id="input-name" name="input-name" value="{{name}}" max="30"><br><br>

                <label for="">Age:</label>
                <input type="number" id="input-age" name="input-age" value={{age}}><br><br>

                <label for="">Height:</label>
                <input type="number" step="0.1" id="input-height" name="input-height" value={{height}}><br><br>

                <label for="">Actual Weight:</label>
                <input type="number" step="0.01" id="input-actual-weight" name="input-actual-weight" value={{actual_weight}}><br><br>

                <label for="">Initial Weight:</label>
                <input type="number" step="0.01" id="input-initial-weight" name="input-initial-weight" value={{initial_weight}}><br><br>
                
                <button onclick="saveNewInfo(`{{id}}`)">Save</button>
            </form>
        </div>
    </div>

    <!-- The Goal Modal -->
    <div id="goalModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <form action="" class ="modalUserGoal">
                <label for="">Goal:</label>
                <input type="text" id="input-goal" name="input-goal" value="{{goal}}" max="30"><br><br>

                <button onclick="saveNewGoal(`{{id}}`)">Save</button>
            </form>
        </div>
    </div>



</div>

<script src="./javascripts/profile.js"></script>
